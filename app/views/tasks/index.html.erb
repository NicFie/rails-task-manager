<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <% if task.completed %>
      <li><i class="fa-regular fa-square-check"></i> <%= link_to "#{task.title}", task_path(task.id) %></li>
    <% else %>
      <li><i class="fa-regular fa-square"></i> <%= link_to "#{task.title}", task_path(task.id) %></li>
    <% end %>
  <% end %>
</ul>

<%= link_to 'Add new task', new_task_path %>
